<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>

<div class="panel_title">
  <div class="col-lg-12">
    <div class="pull-left">
      <h1 class="mt10 mb10 fs2">
        Categories
        <small>New</small>
      </h1>
    </div>
    <div class="pull-right">
      <small>
        <ol class="breadcrumb pt20">
          <li>
            <%= link_to '<i class="glyphicon glyphicon-home"></i>'.html_safe, root_path %>
          </li>
          <li>
            <%= link_to '<i class="glyphicon glyphicon-dashboard"></i>'.html_safe+' Dashboard', { controller: 'dashboard', action: 'index' } %>
          </li>
          <li>
            <%= link_to '<i class="glyphicon glyphicon-tags"></i>'.html_safe+' Categories', { controller: 'categories', action: 'index' } %>
            
          </li>
          <li class="active">
            <i class="glyphicon glyphicon-file"></i>&nbsp;
            New
          </li>
        </ol>
      </small>
    </div>
  </div>
</div>

<div class="col-lg-12">
  <%= form_for(@category, url: adm_categories_path) do |f| %>
    <% if @category.errors.any? %>
      <div id="errors">
        <h2><%= pluralize(@category.errors.count, "error") %> prevent this post from saving</h2>
        <ul>
          <% @category.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :id %>

    <div class="form-group col-lg-12 mb15 pl0 pr0">
      <label class="col-lg-3 pl0">Name</label>
      <div class="col-lg-9 pr0">
        <%= f.text_field :cat_name, html_options={ "class" => "form-control" } %>	
      </div>

    </div>

    <div class="form-group col-lg-12 mb15 pl0 pr0">
      <label class="col-lg-3 pl0">Description</label>
      <div class="col-lg-9 pr0">
        <%= f.text_area :cat_description %>
      </div>
    </div>

    <div class="form-group col-lg-12 mb15 pl0 pr0">
      <label class="col-lg-3 pl0">Slug</label>
      <div class="col-lg-9 pr0">
        <%= f.text_field :cat_slug, html_options={ "class" => "form-control" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Add New Category", html_options={ "class" => "btn btn-primary" } %>
      <%= link_to "Cancel", adm_categories_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div>


<script>
  $(document).ready(function() {
    setTimeout(function() {
      tinyMCE.init({
        menubar: false,
        selector: 'textarea'
      });
      console.log('jalan');
    }, 500);

    $('#pill_categories').addClass('active');
  });

</script>