<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>

<div class="panel_title">
  <div class="col-lg-12">
    <div class="pull-left">
      <h1 class="mt10 mb10 fs2">
        Pages
        <small>New</small>
      </h1>
    </div>
    <div class="pull-right">
      <small>
        <ol class="breadcrumb pt20">
          <li>
            <%= link_to '<i class="glyphicon glyphicon-home"></i>'.html_safe, root_url %>
          </li>
          <li>
            <%= link_to '<i class="glyphicon glyphicon-dashboard"></i>'.html_safe+' Dashboard', { controller: 'dashboard', action: 'index' } %>
          </li>
          <li>
            <%= link_to '<i class="glyphicon glyphicon-briefcase"></i>'.html_safe+' Pages', { controller: 'pages', action: 'index' } %>
          </li>
          <li class="active">
            <i class="glyphicon glyphicon-file"></i>
            New
          </li>
        </ol>
      </small>
    </div>
  </div>
</div>

<div class="col-lg-12">
  <%= form_for(@article, url: adm_pages_path) do |f| %>
    <% if @article.errors.any? %>
      <div id="errors" class="alert alert-danger">
        <h2 class="mt5 mb5"><%= pluralize(@article.errors.count, "error") %> prevent this post from saving</h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- barisan content form -->
    <div class="col-lg-9 pl0">
      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "Title", onkeyup: "adm_pages.create_permalink();" %>
      </div>

      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><%= app_set('site_domain') %>/page/</span>
          <%= f.text_field :permalink, class: "form-control", placeholder: "Permalink" %>
        </div>
      </div>		

      <div class="form-group">
        <%= f.text_area :body, placeholder: "Article", style: "min-height: 300px" %>
      </div>

      <%= render "adm/articles/panel_ext" %>
    </div>

    <div class="col-lg-3">
      <%= render "panel_publish" %>
      <%= render "panel_featured_image" %>
    </div>

  <% end %>
</div>


<script>adm_pages.onload();</script>