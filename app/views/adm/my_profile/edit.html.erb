<div class="panel_title">
  <div class="col-lg-12">
    <div class="pull-left">
      <h1 class="mt10 mb10 fs2">
        My Profile
        <small>Edit</small>
      </h1>
    </div>
    <div class="pull-right">
      <small>
        <ol class="breadcrumb pt20">
          <li>
            <%= link_to '<i class="glyphicon glyphicon-home"></i>'.html_safe, root_path %>
          </li>
          <li>
            <%= link_to '<i class="glyphicon glyphicon-dashboard"></i> Dashboard'.html_safe, { class: 'dashboard', action: 'index' } %>
          </li>
          <li>
            <%= link_to '<i class="glyphicon glyphicon-user"></i> My Profile'.html_safe, { class: 'my_profile', action: 'index' } %>      
          </li>
          <li class="active">
            <i class="glyphicon glyphicon-pencil"></i>
            Edit
          </li> 
        </ol>
      </small>
    </div>
  </div>
</div>

<!-- content -->
<div class="col-lg-12">
  <%= form_for(@user, url: '/adm/my_profile/update', multipart: true) do |f| %>
  <table>
    <tr>
      <td valign="top">
        <%= image_tag('thumb/'+current_user.avatar_file) %>
        <%= f.file_field(:avatar_file) %>
      </td>
      <td valign="top">
        <table class="table table-striped">
          <tbody>
            <tr>
              <td>Full Name</td>
              <td>:</td>
              <td><%= f.text_field(:full_name, class: 'form-control') %></td>
            </tr>
            <tr>
              <td>Avatar Name</td>
              <td>:</td>
              <td><%= f.text_field(:nick_name, class: 'form-control') %></td>
            </tr>
            <tr>
              <td colspan="3">
                <input type="submit" class="btn btn-primary" value="Save">
              </td>
            </tr>
          </tbody>
        </table>
      </td>
    </tr>
  </table>
  <% end %>
</div>