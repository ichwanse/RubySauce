<%= render 'widget/head_top' %>
<section class="container back-white pl0 pr0">
  <%= render "widget/nav" %>

  <!-- breadcrumb -->
  <div class="col-lg-12">
    <ol class="breadcrumb">
      <li>
        <a href="/"><i class="glyphicon glyphicon-home"></i> Home</a>
      </li>
      <li class="active">
        <i class="glyphicon glyphicon-file"></i>
        <%= @article.title %>
      </li>
    </ol>
  </div>


  <div class="container">
    <div class="col-lg-9">
      <h1><%= @article.title %></h1>
      <%= @article.body.html_safe %>
      <div class="clear line" style="margin-right:50px"></div>

    </div>

    <div class="col-lg-3">
      <div>
        <%= render "widget/right_categories" %>
      </div>

      <div>
        <%= render "widget/recent_article" %>
      </div>

    </div>
  </div>
</section>
  
<%= render "widget/footer" %>

